{
  "name": "lemmy-ui",
  "description": "An isomorphic UI for lemmy",
  "author": "Dessalines <tyhou13@gmx.com>",
  "license": "AGPL-3.0",
  "scripts": {
    "build:client:dev": "webpack --env.platform=client --mode=development",
    "build:client:prod": "webpack --env.platform=client --mode=production",
    "build:dev": "yarn run build:server:dev && yarn run build:client:dev",
    "build:prod": "yarn run build:server:prod && yarn run build:client:prod",
    "build:server:dev": "webpack --env.platform=server --mode=development",
    "build:server:prod": "webpack --env.platform=server --mode=production",
    "clean": "yarn run rimraf dist",
    "dev": "nodemon --watch ./src/shared/components -e ts,tsx,css,scss --exec yarn run start",
    "lint": "tsc --noEmit && eslint --report-unused-disable-directives --ext .js,.ts,.tsx src",
    "prebuild:dev": "yarn clean && node generate_translations.js",
    "prebuild:prod": "yarn clean && node generate_translations.js",
    "serve": "node dist/js/server.js",
    "start": "yarn run build:dev && yarn run serve"
  },
  "repository": "https://github.com/LemmyNet/lemmy-ui",
  "dependencies": {
    "@typescript-eslint/parser": "^4.3.0",
    "autosize": "^4.0.2",
    "choices.js": "^9.0.1",
    "emoji-short-name": "^1.0.0",
    "express": "~4.17.1",
    "i18next": "^19.8.1",
    "inferno": "^7.4.5",
    "inferno-create-element": "^7.4.5",
    "inferno-helmet": "^5.2.1",
    "inferno-hydrate": "^7.4.5",
    "inferno-i18next": "github:nimbusec-oss/inferno-i18next#semver:^7.4.2",
    "inferno-router": "^7.4.5",
    "inferno-server": "^7.4.5",
    "isomorphic-cookie": "^1.2.4",
    "isomorphic-ws": "^4.0.1",
    "jwt-decode": "^3.0.0",
    "markdown-it": "^11.0.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "moment": "^2.29.0",
    "reconnecting-websocket": "^4.4.0",
    "register-service-worker": "^1.7.1",
    "rxjs": "^6.6.3",
    "serialize-javascript": "^5.0.1",
    "tippy.js": "^6.1.1",
    "toastify-js": "^1.9.2",
    "tributejs": "^5.1.3",
    "ws": "^7.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/autosize": "^3.0.6",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@types/node-fetch": "^2.5.7",
    "@types/serialize-javascript": "^4.0.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-inferno": "^6",
    "bootstrap": "^4.5.2",
    "bootswatch": "^4.5.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-plugin-jane": "^9.0.3",
    "husky": "^4.3.0",
    "karabin-js-client": "^1.0.14",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.3",
    "node-fetch": "^2.6.1",
    "node-sass": "^4.12.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.0.1",
    "sortpack": "^2.1.9",
    "style-loader": "^1.3.0",
    "terser": "^5.3.4",
    "typescript": "^4.0.3",
    "webpack": "4.44.2",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "3.11.0",
    "webpack-node-externals": "^2.5.2"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "engineStrict": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": [
      "sortpack"
    ]
  }
}
